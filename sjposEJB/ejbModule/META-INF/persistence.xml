<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="sjPOSEJB" transaction-type="JTA">
		<jta-data-source>java:/sjposDS</jta-data-source>
		<class>sv.com.stjacks.sjpos.entities.Categoria</class>
		<class>sv.com.stjacks.sjpos.entities.FormaPagoTienda</class>
		<class>sv.com.stjacks.sjpos.entities.Pais</class>
		<class>sv.com.stjacks.sjpos.entities.TipoCliente</class>
		<class>sv.com.stjacks.sjpos.entities.Articulo</class>
		<class>sv.com.stjacks.sjpos.entities.Genero</class>
		<class>sv.com.stjacks.sjpos.entities.ProductoTienda</class>
		<class>sv.com.stjacks.sjpos.entities.ProductoVenta</class>
		<class>sv.com.stjacks.sjpos.entities.TipoDocumentoTienda</class>
		<class>sv.com.stjacks.sjpos.entities.TipoVenta</class>
		<class>sv.com.stjacks.sjpos.entities.TipoDocumento</class>
		<class>sv.com.stjacks.sjpos.entities.Tienda</class>
		
		<properties>
			<property name="hibernate.connection.pool_size" value="1"/>
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
			<property name="show_sql" value="true"/>
			<property name="hibernate.hbm2ddl.auto" value="update"/>
			<property name="hibernate.temp.use_jdbc_metadata_defaults" value="false"/>
		</properties>	
	</persistence-unit>
</persistence>
